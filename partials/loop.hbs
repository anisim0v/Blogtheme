{{#foreach posts}}
  <article class="{{post_class}} wow fadeIn" data-wow-duration=".8s">
    <div class="row">

      <div class="column medium-column-40">
        <header class="entry-header">
          {{#primary_author}}
            <p class="entry-author">Автор: <a href="{{url}}">{{name}}</a></p>
          {{/primary_author}}
          <h2 class="entry-title"><a href="{{url}}">{{{title}}}</a></h2>
          <time class="entry-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
        </header>
      </div>

      <div class="column medium-offset-5">
        <section class="entry-content">
          <p class="entry-tags">{{tags prefix="Теги: "}}</p>
          <p>{{excerpt characters="400"}}</p>
          <p><a href="{{url}}" class="more-link">Читать дальше</a></p>
        </section>
      </div>

    </div>
  </article>
{{/foreach}}
